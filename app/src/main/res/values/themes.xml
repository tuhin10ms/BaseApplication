<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Custom Animation. -->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <!-- Custom activity transition animation. -->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Layout Padding With Transparent Background. -->
    <style name="LayoutStyle">
        <item name="android:padding">@dimen/layout_padding_24</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Layout Padding With Primary Background. -->
    <style name="LayoutStyle2">
        <item name="android:padding">@dimen/layout_padding_12</item>
        <item name="android:background">@color/teal_200</item>
    </style>


    <!-- Default Button Style 1 -->
    <style name="ButtonAppTheme.Default.Large" parent="android:Widget.Button">
        <item name="android:background">@drawable/shape_rounded_bg_teal_5_st_teal_6</item>
        <item name="android:paddingStart">@dimen/padding_12dp</item>
        <item name="android:paddingEnd">@dimen/padding_12dp</item>
        <item name="android:textSize">@dimen/button_text_17sp</item>
        <item name="android:enabled">true</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:height">@dimen/default_button_height_large</item>
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Default Button Style 2 -->
    <style name="ButtonAppTheme.Default.Small" parent="android:Widget.Button">
        <item name="android:background">@drawable/shape_rounded_bg_teal_5_st_teal_6</item>
        <item name="android:paddingStart">@dimen/padding_12dp</item>
        <item name="android:paddingEnd">@dimen/padding_12dp</item>
        <item name="android:textSize">@dimen/button_text_17sp</item>
        <item name="android:enabled">true</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
        <item name="android:height">@dimen/default_button_height_small</item>
        <item name="fontFamily">@font/lexend_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


